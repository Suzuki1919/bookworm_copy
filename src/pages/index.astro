---
import config from "@/config/config.json";
import Base from "@/layouts/Base.astro";
import Pagination from "@/layouts/components/Pagination.astro";
import Posts from "@/layouts/Posts.astro";
import SocialWithImages from "@/layouts/components/SocialWithImages.astro";
import { getSinglePage } from "@/lib/contentParser.astro";
import { sortByDate } from "@/lib/utils/sortFunctions";
import taxonomyFilter from "@/lib/utils/taxonomyFilter";
import social from "@/config/social.json";
import { Image } from "astro:assets";

const posts = await getSinglePage("posts");
const weeklyPosts = taxonomyFilter(posts, "categories", "週刊占い");
const sortedPosts = sortByDate(weeklyPosts);
const totalPages = Math.ceil(weeklyPosts.length / config.settings.pagination);
const currentPosts = sortedPosts.slice(0, config.settings.pagination);

// お知らせ記事を取得
const noticePosts = taxonomyFilter(posts, "categories", "お知らせ");
const sortedNoticePosts = sortByDate(noticePosts);
---

<Base>
  <section class="section">
    <div class="container">
      <!-- 週刊占いセクション -->
      <div class="border-2 border-gray-200 rounded-lg p-6 mb-16">
        <div class="text-center mb-6">
          <h2 class="text-2xl font-semibold mb-2">今週の運勢は？</h2>
          <p class="text-lg text-gray-600">6月9日（月）〜6月15日（日）</p>
        </div>
        <Posts posts={currentPosts} className="" fluid={false} />
      </div>
      
      <!-- 半期占いへのリンク -->
      <div class="row justify-center mb-16">
        <div class="col-12 md:col-8 lg:col-6">
          <a
            href="/semi-annual"
            class="block rounded-lg overflow-hidden hover:scale-[1.02] transition duration-300 group"
          >
            <Image
              src="/images/posts/01.jpg"
              alt="半期占い"
              width={600}
              height={300}
              class="w-full group-hover:opacity-90 transition duration-300"
            />
            <div class="p-6 bg-light">
              <h2 class="text-2xl font-semibold text-center mb-2">半期占い</h2>
              <p class="text-center text-gray-600">2024年下半期の運勢をチェック</p>
            </div>
          </a>
        </div>
      </div>
      
      <!-- お知らせ記事リンク -->
      <div class="mb-16">
        <div class="text-center mb-8">
          <h2 class="text-2xl font-semibold mb-4">最新のお知らせ</h2>
          <p class="text-gray-600">サイトの最新情報をチェック</p>
        </div>
        <div class="max-w-2xl mx-auto">
          {
            sortedNoticePosts.slice(0, 3).map((post) => (
              <div class="border-l-4 border-primary pl-4 py-3 mb-4 hover:bg-gray-50 transition duration-200">
                <a href={`/${post.id}`} class="block">
                  <h3 class="text-lg font-semibold text-primary hover:text-primary-dark transition duration-200 mb-1">
                    {post.data.title}
                  </h3>
                  <p class="text-gray-600 text-sm mb-1">{post.data.description}</p>
                  <p class="text-xs text-gray-500">
                    {new Date(post.data.date).toLocaleDateString('ja-JP', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </p>
                </a>
              </div>
            ))
          }
          <div class="text-center mt-6">
            <a 
              href="/notices" 
              class="inline-block px-6 py-2 bg-primary text-white rounded-lg hover:bg-primary-dark transition duration-200"
            >
              お知らせ一覧を見る
            </a>
          </div>
        </div>
      </div>
      
      <!-- ソーシャルメディアリンク -->
      <div class="text-center mb-16">
        <p class="text-lg font-semibold mb-4">フォローしてね！</p>
        <SocialWithImages source={social} className="flex justify-center space-x-2" />
      </div>
      
      <Pagination currentPage={1} totalPages={totalPages} />
    </div>
  </section>
</Base>
